<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/userPic"
        android:layout_marginTop="15dp"
        android:src="@drawable/user_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single message shown here..."
        android:id="@+id/messageTV"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/userPic"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/messageTV"
        android:layout_marginTop="15dp"
        android:background="@android:color/black"
        android:layout_marginLeft="50dp"/>
</RelativeLayout><!-- From: file:/home/prem/Prem/Workspace/FindMyCoach/app/src/main/res/layout/signle_chat_cointainer_received.xml -->