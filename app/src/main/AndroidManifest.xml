<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.findmycoach.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- Permission to vibrate - recommended, allows vibration feedback on scan -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- Permission to use camera - required -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- Camera features - recommended -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />

    <!-- To access image from Storage and store media files -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To complete message transfer between GCM to FMC-->

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.findmycoach.app.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.findmycoach.app.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.findmycoach.app.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.findmycoach.app.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="com.findmycoach.app.activity.SignUpActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:label="@string/title_activity_signup"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/facebook"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.findmycoach.app.activity.ForgotPasswordActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:label="@string/title_activity_forgot_password"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.findmycoach.app.activity.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.EditProfileActivityMentor"
            android:label="@string/title_activity_edit_profile"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.EditProfileActivityMentee"
            android:label="@string/title_activity_edit_profile"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.AreasOfInterestActivity"
            android:label="@string/title_activity_areas_of_interest" />
        <activity
            android:name="com.findmycoach.app.activity.ChooseImageActivity"
            android:label="@string/title_activity_choose_image"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.findmycoach.app.activity.ChatWidgetActivity"
            android:label="@string/title_activity_chat_widget"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.findmycoach.app.activity.Settings"
            android:label="@string/action_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.findmycoach.app.activity.SetScheduleActivity"
            android:label="@string/set_schedule"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.findmycoach.app.activity.ValidatePhoneActivity"
            android:label="@string/title_validate_phone"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name="com.findmycoach.app.activity.AddNewSlotActivity"
            android:label="@string/add_new_slot"
            android:screenOrientation="portrait" />
        android:label="@string/add_new_slot" />
        <activity
            android:name="com.findmycoach.app.activity.StudentDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MentorDetailsActivity"
            android:label="@string/title_activity_mentor_details"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.findmycoach.app.activity.UserListActivity"
            android:label="@string/title_activity_user_list"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.ScheduleYourVacation"
            android:label="@string/schedule_vacation"

            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ScheduleNewClass"
            android:label="@string/class_schedule"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activity.PaymentDetailsActivity"
            android:label="@string/payment_details"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.SubCategoryActivity" />

        <activity
            android:name=".activity.AboutEvent"
            android:label="@string/event_desc"
            android:screenOrientation="portrait" />

        <!-- Activities and service responsible for gathering customer consent and for future payments  -->
        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PayPalFuturePaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.FuturePaymentConsentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.FuturePaymentInfoActivity" />

        <!-- Activities responsible for gathering card info  -->
        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />

        <receiver
            android:name="com.findmycoach.app.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.findmycoach.app" />
            </intent-filter>
        </receiver>

        <service android:name="com.findmycoach.app.GcmFmcService" />
        <service android:name="com.findmycoach.app.BackgroundService" />

    </application>

</manifest>
