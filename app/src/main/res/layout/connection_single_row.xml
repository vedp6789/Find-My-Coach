<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentImageView"
        android:src="@drawable/user_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of User"
        android:id="@+id/nameTV"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/studentImageView"
        android:layout_toRightOf="@+id/studentImageView"
        android:layout_toLeftOf="@+id/detailsTV"
        android:layout_above="@+id/lastMsgTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details"
        android:gravity="center_vertical"
        android:id="@+id/detailsTV"
        android:layout_alignTop="@+id/nameTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/nameTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last msg shown here...."
        android:id="@+id/lastMsgTV"
        android:layout_alignBottom="@+id/studentImageView"
        android:layout_toRightOf="@+id/studentImageView" />

</RelativeLayout>