<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/purple"
    android:minWidth="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_margin="@dimen/calender_header_margin_arrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/prompt_phone"
        android:textColor="@color/white"
        android:textSize="@dimen/profile_name"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/underline"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/back_margin"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            style="@style/EditTextCustomHolo"
            android:id="@+id/countryCodeTV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/calender_header_margin_arrow"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/days_margin"
            android:singleLine="true" />

        <EditText
            android:id="@+id/phoneEditText"
            style="@style/EditTextCustomHolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/calender_header_margin_arrow"
            android:layout_weight="1"
            android:hint="@string/prompt_phone"
            android:inputType="phone"
            android:padding="@dimen/days_margin"
            android:singleLine="true" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/days_margin"
            android:layout_toLeftOf="@+id/textView2"
            android:background="@drawable/custom_button_click"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/custom_button_text_color_click"
            android:textSize="@dimen/profile_details"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/days_margin"
            android:background="@drawable/custom_button_click"
            android:textColor="@color/custom_button_text_color_click" />

        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/days_margin"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:background="@drawable/custom_button_click"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/custom_button_text_color_click"
            android:textSize="@dimen/profile_details"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>