            <com.findmycoach.app.views.ChizzleTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/back_margin"
                android:text="@string/teaching_medium_preferences"
                android:textColor="@color/purple"
                android:textSize="@dimen/profile_heading"
                android:textStyle="bold" />

            <com.findmycoach.app.views.ChizzleTextView
                android:id="@+id/teachingMediumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="@color/purple"
                android:textSize="@dimen/profile_details" />

            <com.findmycoach.app.views.ChizzleTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/back_margin"
                android:text="@string/students_preference"
                android:textColor="@color/purple"
                android:textSize="@dimen/profile_heading"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/loveToTeachLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical" />


            <RelativeLayout
                android:id="@+id/multiple_Address_RL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/back_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal|fill_vertical"
                android:visibility="gone">

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/otherAddressesTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/arrowOtherAddress"
                    android:singleLine="false"
                    android:text="@string/other_addresses"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/arrowOtherAddress"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:background="@null"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/multiple_Address_Val_RL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/back_margin"
                android:layout_marginRight="@dimen/back_margin"
                android:visibility="visible">

                <ListView
                    android:id="@+id/multipleAddressLV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:stackFromBottom="false" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/summaryHeaderProfile"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/back_margin"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal|fill_vertical">

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/summaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toLeftOf="@+id/arrowProfile"
                    android:text="@string/about_me"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />


                <ImageButton
                    android:id="@+id/arrowProfile"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignWithParentIfMissing="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="-30dp"
                    android:background="@null"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/arrow_down" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/aboutMeLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/back_margin"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <com.findmycoach.app.views.ChizzleTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/my_qualification"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/myQualificationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/my_accreditions"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/myAccreditionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/my_experience"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/myExperienceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/my_teaching_methodology"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/myTeachingMethodologyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/my_awards"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/myAwardsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
