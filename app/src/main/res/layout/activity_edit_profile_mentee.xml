<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.findmycoach.student.activity.SignUpActivity">


    <include
        layout="@layout/header_back_name_menu"
        android:id="@+id/header" />


    <ScrollView
        android:padding="@dimen/back_margin"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/back_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <FrameLayout
                    android:layout_width="@dimen/user_image_height_width"
                    android:layout_height="@dimen/user_image_height_width">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/user_image_height_width"
                        android:layout_height="@dimen/user_image_height_width"
                        android:src="@drawable/user_icon" />

                    <ImageView
                        android:layout_width="@dimen/indicator"
                        android:layout_height="@dimen/indicator"
                        android:background="@color/purple"
                        android:src="@drawable/edit_profile_small"
                        android:padding="@dimen/days_margin"
                        android:layout_gravity="right|bottom" />

                </FrameLayout>

                <com.findmycoach.app.views.ChizzleTextView
                    android:text="abc@xyz.com"
                    android:layout_marginLeft="@dimen/back_margin"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_light"
                        android:text="@string/prompt_first_name"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:text=" *"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>

               <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/input_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:hint="@string/prompt_first_name"
                    android:textSize="@dimen/profile_details"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_light"
                        android:text="@string/prompt_last_name"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:text=" *"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>

               <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/input_last_name"
                    android:textSize="@dimen/profile_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:hint="@string/prompt_last_name"
                    android:singleLine="true" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_gender"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_gender"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:prompt="@string/prompt_gender"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:textColor="@color/purple_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_date_of_birth"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/input_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_dob"
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:textColorHint="@color/purple_light"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details"
                    android:onClick="setDate" />

                <LinearLayout
                    android:layout_marginTop="-6dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_light"
                        android:text="@string/prompt_address"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:text=" *"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>

                <AutoCompleteTextView
                    android:textColor="@color/purple"
                    android:id="@+id/input_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:gravity="top"
                    android:textSize="@dimen/profile_details"
                    android:hint="@string/prompt_address"
                    android:textColorHint="@color/purple_light"
                    android:inputType="textAutoComplete" />


                <LinearLayout
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_light"
                        android:text="@string/prompt_city"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:text=" *"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>

                <AutoCompleteTextView
                    android:textSize="@dimen/profile_details"
                    android:textColor="@color/purple"
                    android:id="@+id/input_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:hint="@string/prompt_address1"
                    android:textColorHint="@color/purple_light"
                    android:inputType="textAutoComplete" />

                <LinearLayout
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_light"
                        android:text="@string/prompt_pin"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple"
                        android:text=" *"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>


               <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/input_pin"
                    android:textSize="@dimen/profile_details"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_pin"
                    android:inputType="textPostalAddress"
                    android:singleLine="true" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/profile_heading"
                    android:text="@string/mentor_for"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_mentor_for"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>

                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_training_location"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

               <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/input_training_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:textSize="@dimen/profile_details"
                    android:hint="@string/prompt_training_location"
                    android:inputType="text"
                    android:singleLine="true" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_coaching_type"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_coaching_type"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>

                <com.findmycoach.app.views.ChizzleButton
                    android:id="@+id/button_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginRight="@dimen/textView_padding_margin"
                    android:text="@string/action_save"
                    android:textSize="@dimen/button_text_size"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_button_click_white_bg"
                    android:textColor="@color/custom_button_text_color_click_white_bg"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginBottom="@dimen/back_margin" />


            </LinearLayout>

            <fragment android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:name="com.google.android.gms.maps.MapFragment"
                android:visibility="gone"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
