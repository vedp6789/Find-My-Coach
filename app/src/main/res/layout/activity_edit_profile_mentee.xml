<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.findmycoach.student.activity.SignUpActivity">


    <include
        android:id="@+id/header"
        layout="@layout/header_back_name_menu" />


    <ScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginBottom="@dimen/back_margin"
        android:paddingLeft="@dimen/back_margin"
        android:paddingRight="@dimen/back_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="4">

                <FrameLayout
                    android:layout_width="@dimen/user_image_height_width"
                    android:layout_height="@dimen/user_image_height_width">

                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="@dimen/user_image_height_width"
                        android:layout_height="@dimen/user_image_height_width"
                        android:src="@drawable/user_icon" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:id="@+id/addPhotoMentee"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/indicator"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@color/purple"
                        android:padding="@dimen/days_margin"
                        android:text="@string/change_photo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/profile_add_photo" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/back_margin"
                    android:orientation="vertical">


                    <com.findmycoach.app.views.ChizzleTextView
                        android:id="@+id/profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_details" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/back_margin"
                        android:orientation="horizontal">

                        <com.findmycoach.app.views.ChizzleTextView
                            android:id="@+id/dobTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prompt_date_of_birth"
                            android:textColor="@color/purple_light"
                            android:textSize="@dimen/profile_heading"
                            android:textStyle="bold" />

                        <com.findmycoach.app.views.ChizzleTextView
                            android:id="@+id/dobRequired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/dobTitle"
                            android:text=" *"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/profile_heading"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/back_margin"
                            android:layout_toLeftOf="@+id/dobInfo"
                            android:layout_toRightOf="@+id/dobRequired"
                            android:layout_toStartOf="@+id/dobInfo"
                            android:orientation="vertical">

                            <com.findmycoach.app.views.ChizzleTextView
                                android:id="@+id/input_date_of_birth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/calender_margin"
                                android:hint="@string/prompt_date_of_birth_hint"
                                android:onClick="setDate"
                                android:textColor="@color/purple"
                                android:textColorHint="@color/purple_light"
                                android:textSize="@dimen/profile_details" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/textView_padding_margin"
                                android:layout_marginTop="-6dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginBottom="-1dp"
                                    android:src="@drawable/drop_down_arrow_purple_small" />

                                <com.findmycoach.app.views.ChizzleTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentLeft="true"
                                    android:background="@color/purple_light" />

                            </LinearLayout>
                        </LinearLayout>

                        <com.findmycoach.app.views.ChizzleButton
                            android:id="@+id/dobInfo"
                            android:layout_width="@dimen/back_margin"
                            android:layout_height="@dimen/indicator"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/custom_button_click_white_bg"
                            android:text="i"
                            android:textColor="@color/custom_button_text_color_click_white_bg" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/input_first_name"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:hint="@string/prompt_first_name"
                    android:inputType="textCapSentences|textNoSuggestions|textCapWords"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/input_middle_name"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:hint="@string/prompt_middle_name"
                    android:inputType="textCapSentences|textNoSuggestions|textCapWords"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/input_last_name"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:hint="@string/prompt_last_name"
                    android:inputType="textCapSentences|textNoSuggestions|textCapWords"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/prompt_gender"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_gender"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:background="@android:color/transparent"
                    android:prompt="@string/prompt_gender"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_country"
                        android:textColor="@color/purple_light"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />
                </LinearLayout>

                <Spinner
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_address_line_1"
                        android:textColor="@color/purple_light"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <!--<com.findmycoach.app.views.ChizzleTextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text=" *"-->
                    <!--android:textColor="@color/purple"-->
                    <!--android:textSize="@dimen/profile_heading"-->
                    <!--android:textStyle="bold" />-->

                </LinearLayout>

                <com.findmycoach.app.views.ChizzleAutoCompleteTextView
                    android:id="@+id/city_with_state"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:inputType="textAutoComplete|textCapWords|textNoSuggestions"
                    android:textColor="@color/purple"
                    android:textColorHint="@color/purple_light"
                    android:textCursorDrawable="@drawable/cursor_purple"
                    android:textSize="@dimen/profile_details" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_locale"
                        android:textColor="@color/purple_light"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>


                <com.findmycoach.app.views.ChizzleAutoCompleteTextView
                    android:id="@+id/locale"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_pin"
                    android:inputType="textPostalAddress|textNoSuggestions"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_purple"
                    android:textSize="@dimen/profile_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:orientation="horizontal">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_location_preference"
                        android:textColor="@color/purple_light"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>

                <Spinner
                    android:id="@+id/locationPreferenceSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_physical_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/prompt_complete_address"
                        android:textColor="@color/purple_light"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_heading"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.findmycoach.app.views.ChizzleEditText
                    android:id="@+id/physical_address"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:inputType="textAutoComplete|textCapSentences"
                    android:singleLine="true"
                    android:textColor="@color/purple"
                    android:textColorHint="@color/purple_light"
                    android:textCursorDrawable="@drawable/cursor_purple"
                    android:textSize="@dimen/profile_details"
                    android:visibility="gone" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/mentorForHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/mentor_for"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_mentor_for"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>

                <ListView
                    android:id="@+id/childDetailsListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/addChildLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="8dp"
                    android:visibility="gone">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:text="Add Details"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_details" />

                    <Button
                        android:id="@+id/addMoreButton"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="right"
                        android:layout_toRightOf="@+id/textView9"
                        android:background="@color/purple"

                        android:padding="2dp"
                        android:text="+"
                        android:textColor="@color/white"
                        android:visibility="visible" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/back_margin">

                    <com.findmycoach.app.views.ChizzleTextView
                        android:id="@+id/checkBoxTextAdresses"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/inputMutipleAddresses"
                        android:layout_toStartOf="@+id/inputMutipleAddresses"
                        android:gravity="center_vertical"
                        android:text="@string/prompt_mutiple_address"
                        android:textColor="@color/purple"
                        android:textSize="@dimen/profile_details" />

                    <CheckBox
                        android:id="@+id/inputMutipleAddresses"
                        android:layout_width="@dimen/activity_vertical_margin"
                        android:layout_height="@dimen/activity_vertical_margin"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/custom_check_box_square"
                        android:button="@null"
                        android:textColor="@color/purple" />

                </RelativeLayout>


                <ListView
                    android:id="@+id/addressesListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:isScrollContainer="false"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/addAddress"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="8dp"
                    android:background="@color/purple"
                    android:padding="2dp"
                    android:text="+"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/prompt_training_location"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/input_training_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_training_location"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/profile_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-1dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentLeft="true"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/prompt_coaching_type"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_coaching_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small" />

                    <com.findmycoach.app.views.ChizzleTextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/groupClassesDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/back_margin"
                    android:visibility="gone">

                    <RadioGroup
                        android:id="@+id/radioGroupDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/back_margin"
                        android:checkedButton="@+id/radioHostingYes"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioHostingYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/custom_check_box"
                            android:paddingLeft="@dimen/radio_button_padding"
                            android:text="@string/prompt_hosting_yes"
                            android:textColor="@color/purple"
                            android:textSize="@dimen/profile_heading" />

                        <RadioButton
                            android:id="@+id/radioHostingNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:button="@drawable/custom_check_box"
                            android:paddingLeft="@dimen/radio_button_padding"
                            android:text="@string/prompt_fellow_student_location"
                            android:textColor="@color/purple"

                            android:textSize="@dimen/profile_heading" />
                    </RadioGroup>

                </RelativeLayout>


                <com.findmycoach.app.views.ChizzleButton
                    android:id="@+id/button_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_marginBottom="@dimen/back_margin"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginRight="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/custom_button_click_white_bg"
                    android:text="@string/action_save"
                    android:textAllCaps="false"
                    android:textColor="@color/custom_button_text_color_click_white_bg"
                    android:textSize="@dimen/button_text_size" />


            </LinearLayout>

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>