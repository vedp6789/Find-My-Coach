<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.findmycoach.app.views.ChizzleTextView
        android:id="@+id/tv_select_card"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_card"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.findmycoach.app.views.ChizzleTextView
        android:layout_marginTop="5dp"
        android:id="@+id/tv_add_new_card"
        android:layout_below="@id/tv_select_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/add_new_card"
        android:textSize="15sp"/>
    <ImageButton
        android:layout_marginRight="25dp"
        android:id="@+id/ib_add_new_card"
        android:layout_below="@id/tv_select_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@android:drawable/ic_menu_add"/>

    <ListView
        android:id="@+id/lv_card_details"
        android:layout_below="@id/ib_add_new_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>





