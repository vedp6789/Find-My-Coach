<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.findmycoach.app.activity.ForgotPasswordActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_small"
        android:layout_margin="@dimen/back_margin"
        android:id="@+id/backButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/action_forgot_password"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <EditText
            android:layout_marginTop="@dimen/margin_top"
            style="@style/EditTextCustomHolo"
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/prompt_email_id"
            android:inputType="textEmailAddress"
            android:singleLine="true" />

        <Button
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/action_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_gravity="center"
            android:background="@color/white"
            android:textColor="@color/purple"
            android:text="@string/prompt_submit"
            android:textAllCaps="false"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
