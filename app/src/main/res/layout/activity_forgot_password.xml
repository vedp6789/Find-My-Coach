<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.findmycoach.app.activity.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <com.findmycoach.app.views.ChizzleTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/action_forgot_password"
            android:textColor="@color/white"
            android:textSize="@dimen/header"
            android:textStyle="bold"
            android:layout_marginTop="48dp" />

        <com.findmycoach.app.views.ChizzleEditText
            android:id="@+id/input_email"
            style="@style/EditTextCustomHolo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:hint="@string/prompt_email_id"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/cursor_white" />

        <com.findmycoach.app.views.ChizzleButton
            android:id="@+id/action_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_button_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/custom_button_click"
            android:text="@string/prompt_submit"
            android:textAllCaps="false"
            android:textColor="@color/custom_button_text_color_click"
            android:textSize="@dimen/button_text_size"
            android:textStyle="bold" />

        <com.findmycoach.app.views.ChizzleTextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnResend"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:drawableLeft="@drawable/back_circular"
            android:drawablePadding="@dimen/days_margin"
            android:gravity="center"
            android:padding="@dimen/days_margin"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="@dimen/forget_password_text_size" />


    </LinearLayout>

</LinearLayout>
