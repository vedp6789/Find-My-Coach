<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.findmycoach.app.activity.SignUpActivity">

    <include
        layout="@layout/header_back_name_menu"
        android:id="@+id/header" />


    <ScrollView
        android:padding="@dimen/back_margin"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/user_image_height_width"
                    android:layout_height="@dimen/user_image_height_width"
                    android:src="@drawable/user_icon" />

                <TextView
                    android:text="abc@xyz.com"
                    android:layout_marginLeft="@dimen/back_margin"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple_light"
                    android:text="@string/prompt_first_name"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/input_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:hint="@string/prompt_first_name"
                    android:textSize="@dimen/profile_details"
                    android:singleLine="true" />

                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_last_name"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/input_last_name"
                    android:textSize="@dimen/profile_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:hint="@string/prompt_last_name"
                    android:singleLine="true" />

                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_gender"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_gender"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:prompt="@string/prompt_gender"
                    android:spinnerMode="dropdown" />

                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:textColor="@color/purple_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_date_of_birth"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/input_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_date_of_birth"
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:textColorHint="@color/purple_light"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details"
                    android:onClick="setDate" />

                <LinearLayout
                    android:layout_marginTop="-6dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_address"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:textColor="@color/purple"
                    android:id="@+id/input_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:gravity="top"
                    android:textSize="@dimen/profile_details"
                    android:hint="@string/prompt_address"
                    android:textColorHint="@color/purple_light"
                    android:inputType="textAutoComplete" />


                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_city"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:textSize="@dimen/profile_details"
                    android:textColor="@color/purple"
                    android:id="@+id/input_address1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:hint="@string/prompt_address1"
                    android:textColorHint="@color/purple_light"
                    android:inputType="textAutoComplete" />

                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_pin"
                    android:textColor="@color/purple_light"
                    android:textSize="@dimen/profile_heading"
                    android:textStyle="bold" />


                <EditText
                    android:id="@+id/input_pin"
                    android:textSize="@dimen/profile_details"
                    style="@style/EditTextCustomHoloPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_pin"
                    android:inputType="number"
                    android:singleLine="true" />


                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_accomplishment"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/input_accomplishment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/EditTextCustomHoloPurple"
                    android:hint="@string/prompt_accomplishment"
                    android:inputType="text"
                    android:textSize="@dimen/profile_details"
                    android:singleLine="true" />


                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_charges"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/input_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:textSize="@dimen/profile_details"
                        android:layout_toLeftOf="@+id/chargesPerUnit"
                        android:layout_toStartOf="@+id/chargesPerUnit"
                        style="@style/EditTextCustomHoloPurple"
                        android:hint="@string/prompt_charges"
                        android:inputType="number"
                        android:singleLine="true" />

                    <Spinner
                        android:id="@+id/chargesPerUnit"
                        android:background="@android:color/transparent"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignBottom="@+id/input_charges" />

                    <LinearLayout
                        android:layout_below="@+id/chargesPerUnit"
                        android:layout_alignRight="@+id/chargesPerUnit"
                        android:layout_alignLeft="@+id/chargesPerUnit"
                        android:layout_marginTop="-13dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_marginBottom="-1dp"
                            android:src="@drawable/drop_down_arrow_purple_small"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_height="1dp"
                            android:background="@color/purple_light" />

                    </LinearLayout>


                </RelativeLayout>


                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_experience_in_years"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/input_experience"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>


                <TextView
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_area_of_coaching"
                    android:textSize="@dimen/profile_heading"
                    android:textColor="@color/purple_light"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginTop="@dimen/textView_padding_margin"
                    android:id="@+id/input_areas_of_coaching"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple"
                    android:textColorHint="@color/purple_light"
                    android:hint="Click Here"
                    android:inputType="number"
                    android:textSize="@dimen/profile_details"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_marginTop="-6dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="-1dp"
                        android:src="@drawable/drop_down_arrow_purple_small"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_height="1dp"
                        android:background="@color/purple_light" />

                </LinearLayout>

                <CheckBox
                    android:layout_marginTop="@dimen/back_margin"
                    android:id="@+id/input_willing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/purple"
                    android:text="@string/prompt_willing_to_travel" />

                <Button
                    android:id="@+id/button_update"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_button_height"
                    android:layout_margin="@dimen/textView_padding_margin"
                    android:background="@color/purple_light"
                    android:text="@string/action_save"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/back_margin"
                    android:layout_marginBottom="@dimen/back_margin"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
