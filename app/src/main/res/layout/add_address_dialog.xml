            <com.findmycoach.app.views.ChizzleAutoCompleteTextView
                android:id="@+id/locale"
                style="@style/EditTextCustomHoloPurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/back_margin"
                android:layout_marginTop="@dimen/back_margin"
                android:hint="@string/prompt_locale"
                android:layout_toLeftOf="@+id/deleteAddressButton"
                android:inputType="textCapSentences|textNoSuggestions|textCapWords"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textCursorDrawable="@drawable/cursor_purple"
                android:textSize="@dimen/profile_details" />



            <ImageButton
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:id="@+id/deleteAddressButton"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/close_icon"
                android:background="@color/purple"
                android:padding="12dp"
                android:scaleType="fitCenter" />
