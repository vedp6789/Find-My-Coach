<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/back_margin">

        <com.findmycoach.app.views.ChizzleTextView
            android:id="@+id/headerSummary"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/back_margin"
            android:background="@color/purple"
            android:gravity="center_vertical|center_horizontal"
            android:text="Address Details"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/addressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headerSummary"
            android:layout_marginLeft="@dimen/back_margin"
            android:layout_marginRight="@dimen/back_margin">

            <com.findmycoach.app.views.ChizzleEditText
                android:id="@+id/addressLine1"
                android:layout_below="@+id/county_outline"
                style="@style/EditTextCustomHoloPurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/back_margin"
                android:hint="@string/prompt_flat_street"
                android:inputType="textCapSentences|textNoSuggestions|textCapWords"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_purple"
                android:textSize="@dimen/profile_details" />

            <com.findmycoach.app.views.ChizzleAutoCompleteTextView
                android:id="@+id/locality"
                style="@style/EditTextCustomHoloPurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressLine1"
                android:layout_marginBottom="@dimen/back_margin"
                android:layout_marginTop="@dimen/back_margin"
                android:hint="@string/prompt_address1"
                android:inputType="textCapSentences|textNoSuggestions|textCapWords"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textCursorDrawable="@drawable/cursor_purple"
                android:textSize="@dimen/profile_details" />

            <com.findmycoach.app.views.ChizzleEditText
                android:id="@+id/zip"
                style="@style/EditTextCustomHoloPurple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locality"
                android:hint="@string/enter_pin"
                android:inputType="textCapSentences|textNoSuggestions|textCapWords"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor_purple"
                android:textSize="@dimen/profile_details" />

            <Spinner
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_button_height"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown"/>


            <LinearLayout
                android:id="@+id/county_outline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:orientation="vertical"
                android:layout_below="@+id/country">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="-1dp"
                    android:src="@drawable/drop_down_arrow_purple_small" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/purple_light" />

            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/addressLayout"
            android:layout_marginBottom="@dimen/back_margin"
            android:layout_marginLeft="@dimen/back_margin"
            android:layout_marginRight="@dimen/back_margin"
            android:layout_marginTop="@dimen/back_margin"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/purple"
                android:text="Cancel"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/done"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="0.5"
                android:background="@color/purple"
                android:text="Done"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>