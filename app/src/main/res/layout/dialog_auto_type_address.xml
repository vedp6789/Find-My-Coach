<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <AutoCompleteTextView
        android:id="@+id/auto_tv_location"
        style="@style/EditTextCustomHoloPurple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:hint="@string/loc"
        android:inputType="textAutoComplete"
        android:padding="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/auto_tv_location"
        android:layout_marginTop="@dimen/back_margin"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/b_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/days_margin"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/custom_button_click_white_bg"
            android:text="@string/ok"
            android:textColor="@color/custom_button_text_color_click_white_bg"
            android:textSize="@dimen/profile_details" />

        <Button
            android:id="@+id/b_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/days_margin"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/custom_button_click_white_bg"
            android:text="@string/cancel"
            android:textColor="@color/custom_button_text_color_click_white_bg"
            android:textSize="@dimen/profile_details" />
    </LinearLayout>


</RelativeLayout>