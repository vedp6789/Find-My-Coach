<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@android:color/darker_gray"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.findmycoach.app.activity.SignUpActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="52dp"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/action_register"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:textSize="26sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/input_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:inputType="textPersonName"
                    style="@style/EditTextCustomHolo"
                    android:hint="@string/prompt_first_name"
                    android:padding="4dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/input_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:inputType="textPersonName"
                    style="@style/EditTextCustomHolo"
                    android:hint="@string/prompt_last_name"
                    android:padding="4dp"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:id="@+id/countryCodeTV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:layout_weight="3"
                        style="@style/EditTextCustomHolo"
                        android:gravity="center"
                        android:padding="4dp" />

                    <EditText
                        android:id="@+id/input_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        style="@style/EditTextCustomHolo"
                        android:hint="@string/prompt_phone"
                        android:inputType="number"
                        android:padding="4dp"
                        android:singleLine="true" />
                </LinearLayout>

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    style="@style/EditTextCustomHolo"
                    android:hint="@string/prompt_email_id"
                    android:inputType="textEmailAddress"
                    android:padding="4dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    style="@style/EditTextCustomHolo"
                    android:hint="@string/prompt_password"
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:singleLine="true" />

                <EditText
                    android:id="@+id/input_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    style="@style/EditTextCustomHolo"
                    android:hint="@string/prompt_confirm_password"
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:singleLine="true" />

            </LinearLayout>

            <RadioGroup android:id="@+id/radio_group_user_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_gravity="center_horizontal">

                <RadioButton android:id="@+id/radio_button_mentor_signup"
                    android:button="@drawable/custom_check_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mentor"
                    android:layout_weight="1"/>

                <RadioButton android:id="@+id/radio_button_mentee_signup"
                    android:button="@drawable/custom_check_box"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/mentee"
                    android:layout_weight="1"/>

            </RadioGroup>

            <Button
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:id="@+id/button_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="@string/action_sign_up"
                android:textAllCaps="false"
                android:textColor="#3257A7"
                android:textStyle="bold"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
