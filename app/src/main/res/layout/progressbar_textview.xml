<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/back_margin">


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/custom_progressbar"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <com.findmycoach.app.views.ChizzleTextView
        android:layout_marginLeft="@dimen/back_margin"
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/progressBar"
        android:layout_toRightOf="@+id/progressBar"
        android:text="Loading..."
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_heading"
        android:textStyle="bold" />


</RelativeLayout>