<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/textView_padding_margin"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/back_margin"
        android:src="@drawable/chat_left_arrow" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginRight="@dimen/distance_tv_max_width"
        android:background="@drawable/message_received"
        android:paddingLeft="@dimen/textView_padding_margin"
        android:paddingRight="@dimen/textView_padding_margin">

        <com.findmycoach.app.views.ChizzleTextView
            android:id="@+id/messageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/back_margin"
            android:src="@drawable/image_thumb"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_details" />
    </RelativeLayout>
</LinearLayout>