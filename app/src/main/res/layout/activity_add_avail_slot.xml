<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/days"
        android:textColor="#000000"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/ll_day1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_days"
        android:layout_marginLeft="15dp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mon" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day1"
        android:layout_marginLeft="15dp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tue" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day2"
        android:layout_marginLeft="15dp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wed" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day3"
        android:layout_marginLeft="15dp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_thur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thur" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day4"
        android:layout_marginLeft="15dp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fri" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day5"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sat" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day6"
        android:layout_marginLeft="15dp"

        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sun" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day7"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sp_time_from"
                android:layout_width="100dp"
                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="@string/to"
                android:textColor="#000000"
                android:textSize="15sp" />

            <Spinner
                android:id="@+id/sp_time_to"
                android:layout_width="100dp"
                android:layout_height="wrap_content"></Spinner>


        </LinearLayout>


    </LinearLayout>

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_create_slot"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp" />

    <Button
        android:id="@+id/b_create_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/create_slot" />


</RelativeLayout>