<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mentor_image"
        android:layout_width="@dimen/list_view_image_height"
        android:layout_height="@dimen/list_view_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/textView_padding_margin"
        android:src="@drawable/user_icon" />


    <TextView
        android:id="@+id/mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/textView_padding_margin"
        android:layout_marginLeft="@dimen/textView_padding_margin"
        android:layout_marginTop="@dimen/textView_padding_margin"
        android:layout_toLeftOf="@+id/chargesTV"
        android:layout_toRightOf="@+id/mentor_image"
        android:layout_toStartOf="@+id/chargesTV"
        android:maxLines="2"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_name"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/mentor_rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.3"
        android:layout_alignBottom="@+id/mentor_image"
        android:layout_alignLeft="@+id/mentor_name"
        android:layout_alignStart="@+id/mentor_name" />

    <ImageView
        android:padding="@dimen/days_margin"
        android:id="@+id/connect_mentor"
        android:layout_width="@dimen/connection_button"
        android:layout_height="@dimen/connection_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/textView_padding_margin"
        android:src="@drawable/connect" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/distanceTV"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/distance_tv_max_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/textView_padding_margin"
        android:layout_toLeftOf="@+id/connect_mentor"
        android:layout_toStartOf="@+id/connect_mentor"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_heading" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/chargesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/textView_padding_margin"
        android:layout_toLeftOf="@+id/distanceTV"
        android:layout_toStartOf="@+id/distanceTV"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_heading" />

    <TextView
        android:visibility="gone"
        android:textStyle="bold"
        android:id="@+id/subCatTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mentor_rating"
        android:layout_alignTop="@+id/mentor_rating"
        android:layout_toLeftOf="@+id/daysTV"
        android:layout_toRightOf="@+id/mentor_rating"
        android:layout_toStartOf="@+id/daysTV"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_heading" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/daysTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/subCatTV"
        android:layout_toLeftOf="@+id/connect_mentor"
        android:layout_toStartOf="@+id/connect_mentor"
        android:singleLine="true"
        android:text="M T W T F S S"
        android:textColor="@color/purple_light"
        android:textSize="@dimen/profile_heading" />
</RelativeLayout>