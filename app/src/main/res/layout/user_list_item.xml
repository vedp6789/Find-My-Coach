<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mentor_image"
        android:layout_width="@dimen/list_view_image_height"
        android:layout_height="@dimen/list_view_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/textView_padding_margin"
        android:src="@drawable/user_icon" />


    <com.findmycoach.app.views.ChizzleTextViewBold
        android:text="name"
        android:id="@+id/mentor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mentor_image"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/textView_padding_margin"
        android:layout_toEndOf="@+id/mentor_image"
        android:layout_toLeftOf="@+id/age"
        android:layout_toRightOf="@+id/mentor_image"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_title"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/search_icons"
        android:layout_height="@dimen/search_icons"
        android:layout_alignBottom="@+id/mentor_image"
        android:layout_toEndOf="@+id/mentor_image"
        android:layout_toRightOf="@+id/mentor_image"
        android:src="@drawable/students" />

    <com.findmycoach.app.views.ChizzleTextViewBold
        android:text="12"
        android:id="@+id/numberOfStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_details" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/search_icons"
        android:layout_height="@dimen/search_icons"
        android:layout_alignBottom="@+id/numberOfStudents"
        android:layout_marginLeft="@dimen/calender_header_margin_arrow"
        android:layout_toEndOf="@+id/numberOfStudents"
        android:layout_toRightOf="@+id/numberOfStudents"
        android:src="@drawable/rating" />

    <com.findmycoach.app.views.ChizzleTextViewBold
        android:text="4.5"
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_details" />

    <!--<ImageView-->
        <!--android:id="@+id/connect_mentor"-->
        <!--android:layout_width="@dimen/connection_button"-->
        <!--android:layout_height="@dimen/connection_button"-->
        <!--android:padding="@dimen/connection_button_padding"-->
        <!--android:src="@drawable/connect"-->
        <!--android:layout_alignBottom="@+id/imageView4"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true" />-->


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/search_icons"
        android:layout_height="@dimen/search_icons"
        android:layout_alignBottom="@+id/rating"
        android:layout_marginLeft="@dimen/calender_header_margin_arrow"
        android:layout_toEndOf="@+id/rating"
        android:layout_toRightOf="@+id/rating"
        android:src="@drawable/location" />

    <com.findmycoach.app.views.ChizzleTextView
        android:text="12km"
        android:id="@+id/distanceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:maxWidth="@dimen/distance_tv_max_width"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_heading" />


    <ImageView
        android:layout_width="@dimen/search_icons"
        android:layout_height="@dimen/search_icons"
        android:layout_alignBottom="@+id/distanceTV"
        android:layout_marginLeft="@dimen/calender_header_margin_arrow"
        android:layout_toRightOf="@+id/distanceTV"
        android:src="@drawable/radio_btn_selected"
        android:id="@+id/imageView4" />

    <com.findmycoach.app.views.ChizzleTextView
        android:text="5yrs"
        android:id="@+id/experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_heading"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <com.findmycoach.app.views.ChizzleTextView
        android:text="$25"
        android:id="@+id/charges"
        android:layout_marginLeft="@dimen/back_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignBottom="@+id/experience"
        android:layout_toRightOf="@+id/experience"
        android:layout_toEndOf="@+id/experience" />



    <com.findmycoach.app.views.ChizzleTextView
        android:text="age"
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/daysTV"
        android:layout_toLeftOf="@+id/daysTV"
        android:layout_toStartOf="@+id/daysTV"
        android:paddingLeft="@dimen/back_margin"
        android:paddingRight="@dimen/back_margin"
        android:singleLine="true"
        android:textColor="@color/purple"
        android:textSize="@dimen/profile_heading" />

    <com.findmycoach.app.views.ChizzleTextView
        android:id="@+id/daysTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="M T W T F S S"
        android:textColor="@color/purple_light"
        android:textSize="@dimen/profile_heading"
        android:textStyle="bold"
        android:layout_alignTop="@+id/mentor_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>