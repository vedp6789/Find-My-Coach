<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.findmycoach.app.views.ChizzleTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/countryName"
        android:textColor="@color/purple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/textView_padding_margin"
        android:gravity="center_vertical"
        android:textSize="@dimen/profile_details"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:layout_toLeftOf="@+id/countryCode"
        android:layout_toStartOf="@+id/countryCode" />


    <com.findmycoach.app.views.ChizzleTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/countryCode"
        android:textColor="@color/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/textView_padding_margin"
        android:gravity="center_vertical"
        android:textSize="@dimen/profile_details"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>