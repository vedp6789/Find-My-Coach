<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/calHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/calender_margin"
                android:background="@drawable/custom_rounded_corner_purple"
                android:gravity="center"
                android:text="@string/today"
                android:textColor="@color/white"
                android:textSize="@dimen/profile_heading"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/buttonlayout"
            android:layout_width="0dp"
            android:layout_height="@dimen/login_button_height"
            android:layout_below="@id/tv_classes_abailability"
            android:layout_margin="@dimen/calender_margin"
            android:layout_weight="1.3"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prevMonth"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_margin="@dimen/days_margin"
                android:background="@drawable/custom_rounded_corner_purple_light"
                android:padding="@dimen/calender_header_margin_arrow"
                android:src="@drawable/scheduled_prev_month" />

            <TextView
                android:id="@+id/currentMonth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/nextMonth"
                android:layout_toRightOf="@+id/prevMonth"
                android:layout_toStartOf="@+id/nextMonth"
                android:gravity="center"
                android:textColor="@color/purple"
                android:textSize="@dimen/profile_details"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/nextMonth"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/days_margin"
                android:background="@drawable/custom_rounded_corner_purple_light"
                android:padding="@dimen/calender_header_margin_arrow"
                android:src="@drawable/scheduled_next_month" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_calendar_week_days"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_below="@+id/calHeader"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/su"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/m"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/t"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/w"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/th"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/f"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_heading"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple"
            android:gravity="center"
            android:text="@string/s"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_heading"
            android:textStyle="bold" />
    </LinearLayout>

    <com.findmycoach.app.util.ScrollableGridView
        android:id="@+id/calendar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_calendar_week_days"
        android:background="@color/purple_light"
        android:horizontalSpacing="0.5dp"
        android:numColumns="7"
        android:verticalSpacing="0.5dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/calendar"
        android:background="@color/purple_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/calendar"
        android:layout_marginTop="@dimen/back_margin"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:layout_width="@dimen/indicator"
            android:layout_height="@dimen/indicator"
            android:layout_margin="@dimen/calender_margin"
            android:background="@drawable/custom_rounded_corner_purple_light"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/connection_button"
            android:layout_marginBottom="@dimen/calender_margin"
            android:layout_marginTop="@dimen/calender_margin"
            android:gravity="center"
            android:text="@string/scheduled_event"
            android:textColor="@color/purple_light" />


        <TextView
            android:layout_width="@dimen/indicator"
            android:layout_height="@dimen/indicator"
            android:layout_marginBottom="@dimen/calender_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/calender_margin"
            android:layout_marginTop="@dimen/calender_margin"
            android:background="@drawable/custom_rounded_corner_purple"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/connection_button"
            android:layout_marginBottom="@dimen/calender_margin"
            android:layout_marginTop="@dimen/calender_margin"
            android:gravity="center"
            android:text="@string/today"
            android:textColor="@color/purple" />


    </LinearLayout>

</RelativeLayout>