<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include
        android:id="@+id/header"
        layout="@layout/header_back_name_menu" />

    <ScrollView
        android:id="@+id/ll_class_slot_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginLeft="@dimen/back_margin"
        android:layout_marginRight="@dimen/back_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/back_margin"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_slot_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_slot_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/coaching_subject"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_slot_subject_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/start_date"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_start_date_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/end_date"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_end_date_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/start_time_of_class"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_start_time_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/class_stop_time"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_end_time_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_week_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/week_days"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_week_days_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_slot_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/class_type"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_slot_type_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_max_users"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/max_students"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_max_users_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_class_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/class_location"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_title"
                    android:textStyle="bold" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_class_location_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                </LinearLayout>




            <LinearLayout
                android:id="@+id/ll_list_of_mentees"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_slot_details"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/days_margin"
                    android:text="@string/trainee"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_name" />

                <ListView
                    android:id="@+id/lv_list_of_mentees"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/days_margin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_list_of_coincidingVacations"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_list_of_mentees"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_coinciding_vacation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/coinciding_vacation"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_name" />

                <ListView
                    android:id="@+id/lv_list_of_coinciding_vacations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/days_margin" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_non_coinciding_vacation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_list_of_coincidingVacations"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_non_coinciding_vacation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/vacations"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_name" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/start_date"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_start_date_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/end_date"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_end_date_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/start_time_of_class"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_start_time_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/back_margin"
                    android:text="@string/class_stop_time"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />

                <com.findmycoach.app.views.ChizzleTextView
                    android:id="@+id/tv_vacation_end_time_val"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textView_padding_margin"
                    android:layout_marginTop="@dimen/days_margin"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/profile_details" />


            </LinearLayout>

            <com.findmycoach.app.views.ChizzleButton
                android:paddingBottom="10dp"
                android:id="@+id/b_delete_slot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/back_margin"
                android:background="@drawable/custom_button_click_white_bg"
                android:textColor="@color/custom_button_text_color_click_white_bg" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>