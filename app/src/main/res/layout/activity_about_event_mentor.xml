<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_class_slot_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/class_info"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/ll_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date" />

            <TextView
                android:id="@+id/tv_start_date_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_end_date"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_start_date"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date" />

            <TextView
                android:id="@+id/tv_end_date_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_start_time"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_end_date"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time_of_class" />

            <TextView
                android:id="@+id/tv_start_time_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_end_time"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_start_time"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_stop_time" />

            <TextView
                android:id="@+id/tv_end_time_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_slot_subject"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_end_date"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_slot_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coaching_subject" />

            <TextView
                android:id="@+id/tv_slot_subject_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_week_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_slot_subject"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tv_week_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/week_days" />


            <TextView
                android:id="@+id/tv_week_days_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_slot_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_week_days"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_slot_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_type" />

            <TextView
                android:id="@+id/tv_slot_type_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_max_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_slot_type"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_max_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_students" />

            <TextView
                android:id="@+id/tv_max_users_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_list_of_mentees"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_class_slot_details"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/trainee" />

        <ListView
            android:id="@+id/lv_list_of_mentees"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_list_of_coincidingVacations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_list_of_mentees"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_coinciding_vacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coinciding_vacation" />

        <ListView
            android:id="@+id/lv_list_of_coinciding_vacations"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_non_coinciding_vacation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_list_of_coincidingVacations"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_non_coinciding_vacation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vacations" />

        <LinearLayout
            android:id="@+id/ll_vacation_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vacation_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_date" />

            <TextView
                android:id="@+id/tv_vacation_start_date_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_vacation_end_date"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vacation_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_date" />

            <TextView
                android:id="@+id/tv_vacation_end_date_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_vacation_start_time"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vacation_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_time_of_class" />

            <TextView
                android:id="@+id/tv_vacation_start_time_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_vacation_end_time"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_vacation_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/class_stop_time" />

            <TextView
                android:id="@+id/tv_vacation_end_time_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/b_delete_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_non_coinciding_vacation" />


</RelativeLayout>