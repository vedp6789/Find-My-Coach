<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.findmycoach.student.activity.AreasOfInterestActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_back_name_menu" />

    <HorizontalScrollView
        android:id="@+id/subCategoryLayoutHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">

        <LinearLayout
            android:id="@+id/subCategoryLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <ListView
        android:id="@+id/areas_of_interest_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonSaveAndAddAnother"
        android:layout_below="@+id/subCategoryLayoutHorizontal"
        android:layout_marginLeft="@dimen/back_margin"
        android:layout_marginRight="@dimen/back_margin" />

    <com.findmycoach.app.views.ChizzleButton
        android:visibility="gone"
        android:id="@+id/buttonSaveAndAddAnother"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_above="@+id/buttonSave"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/back_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/back_margin"
        android:background="@drawable/custom_button_click_white_bg"
        android:gravity="center"
        android:padding="@dimen/textView_padding_margin"
        android:paddingLeft="@dimen/textView_padding_margin"
        android:paddingRight="@dimen/textView_padding_margin"
        android:text="@string/action_save_add_another"
        android:textAllCaps="false"
        android:textColor="@color/custom_button_text_color_click_white_bg"
        android:textSize="@dimen/profile_heading"
        android:textStyle="bold" />

    <com.findmycoach.app.views.ChizzleButton
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/back_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/back_margin"
        android:background="@drawable/custom_button_click_white_bg"
        android:gravity="center"
        android:padding="@dimen/textView_padding_margin"
        android:paddingLeft="@dimen/textView_padding_margin"
        android:paddingRight="@dimen/textView_padding_margin"
        android:text="@string/action_save_exit"
        android:textAllCaps="false"
        android:textColor="@color/custom_button_text_color_click_white_bg"
        android:textSize="@dimen/profile_heading"
        android:textStyle="bold" />

</RelativeLayout>
