<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.findmycoach.student.activity.AreasOfInterestActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_back_name_menu" />

    <HorizontalScrollView
        android:id="@+id/subCategoryLayoutHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header">

        <LinearLayout
            android:id="@+id/subCategoryLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <ListView
        android:id="@+id/areas_of_interest_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_interests"
        android:layout_below="@+id/subCategoryLayoutHorizontal"
        android:layout_marginBottom="@dimen/days_margin"
        android:layout_marginLeft="@dimen/back_margin"
        android:layout_marginRight="@dimen/back_margin" />

    <Button
        android:id="@+id/save_interests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/back_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/custom_button_click_white_bg"
        android:text="@string/action_save"
        android:textAllCaps="false"
        android:textColor="@color/custom_button_text_color_click_white_bg" />

</RelativeLayout>
