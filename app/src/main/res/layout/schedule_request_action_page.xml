<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_icon" />

    <TextView
        android:layout_toRightOf="@id/iv_user_icon"
        android:layout_alignParentTop="true"
        android:id="@+id/tv_schedule_request_title_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_schedule_request_title_message"
        android:layout_marginRight="10dp"

        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_class_detail_title"
        android:layout_below="@id/iv_user_icon"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/requested_class_details" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_start_date"
        android:layout_below="@id/tv_class_detail_title"
        android:text="@string/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_start_date_val"
        android:gravity="center"
        android:layout_below="@id/tv_class_detail_title"
        android:layout_toRightOf="@id/tv_start_date"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_stop_date"
        android:layout_below="@id/tv_start_date"
        android:text="@string/end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_stop_date_val"
        android:gravity="center"
        android:layout_toRightOf="@id/tv_stop_date"
        android:layout_below="@id/tv_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_start_time"
        android:layout_below="@id/tv_stop_date"
        android:text="@string/start_time_of_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_start_time_val"
        android:gravity="center"
        android:layout_below="@id/tv_stop_date"
        android:layout_toRightOf="@id/tv_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_stop_time"
        android:layout_below="@id/tv_start_time"
        android:text="@string/stop_time_of_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_stop_time_val"
        android:gravity="center"
        android:layout_below="@id/tv_start_time"
        android:layout_toRightOf="@id/tv_stop_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_week_days"
        android:layout_below="@id/tv_stop_time"
        android:text="@string/week_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_week_days_val"
        android:gravity="center"
        android:layout_below="@id/tv_stop_time"
        android:layout_toRightOf="@id/tv_week_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_class_type"
        android:layout_below="@id/tv_week_days"
        android:text="@string/class_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_class_type_val"
        android:gravity="center"
        android:layout_below="@id/tv_week_days"
        android:layout_toRightOf="@id/tv_class_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_subject"
        android:layout_below="@id/tv_class_type"
        android:text="@string/subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_subject_val"
        android:gravity="center"
        android:layout_below="@id/tv_class_type"
        android:layout_toRightOf="@id/tv_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_mentor_response_message"
        android:layout_below="@id/tv_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/mentor_response_for_schedule_request_message" />


    <Button
        android:id="@+id/b_profile"
        android:layout_above="@+id/ll_actions"
        android:text="@string/view_profile"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_accept"
            android:text="@string/action_accept"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/b_decline"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/action_decline"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>