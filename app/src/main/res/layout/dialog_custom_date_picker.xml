<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_arrow_up"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/ib_prev_month"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:background="@android:drawable/arrow_up_float"/>
        <ImageButton
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:id="@+id/ib_prev_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/arrow_up_float"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_month_year"
        android:layout_below="@id/ll_arrow_up"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:weightSum="2"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="@string/month"/>
        <TextView
            android:id="@+id/tv_selected_year"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:hint="@string/year"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_arrow_down"
        android:layout_below="@id/ll_month_year"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ib_next_month"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@android:drawable/arrow_down_float"/>
        <ImageButton
            android:id="@+id/ib_next_year"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/arrow_down_float"/>

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_below="@id/ll_arrow_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/b_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/ok"/>
        <Button
            android:id="@+id/b_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel"/>

    </LinearLayout>


</RelativeLayout>