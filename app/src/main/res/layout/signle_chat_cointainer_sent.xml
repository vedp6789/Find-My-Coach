<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/distance_tv_max_width"
        android:layout_marginRight="@dimen/back_margin"
        android:background="@drawable/message_sent"
        android:paddingLeft="@dimen/textView_padding_margin"
        android:paddingRight="@dimen/textView_padding_margin">

        <TextView
            android:id="@+id/messageTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/back_margin"
            android:src="@drawable/image_thumb"
            android:textColor="@color/white"
            android:textSize="@dimen/profile_details" />
    </RelativeLayout>

</LinearLayout>